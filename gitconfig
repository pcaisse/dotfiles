[user]
    email = pcaisse@gmail.com
    name = Peter Caisse
[core]
    editor = nvim
    excludesfile = ~/.gitignore
    autocrlf = input
    whitespace = cr-at-eol
[init]
    defaultBranch = main
[commit]
    gpgsign = true
[push]
    default = simple
[merge]
    ff = false
[pull]
    ff = only
    rebase = true
[alias]
    l = log --graph --oneline
    lp = log -p
    lp1 = log -p -n 1
    lp2 = log -p -n 2
    lp3 = log -p -n 3
    ln = log --name-only
    lf = log --follow -p -- 
    cp = cherry-pick
    st = status
    cl = clone
    ci = commit -v
    co = checkout
    br = branch
    d = diff
    dc = diff --cached
    amend = commit --amend --no-edit
    rb = for-each-ref --sort=-committerdate --count=10 --format='%(refname:short)' refs/heads/
